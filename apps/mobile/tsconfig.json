{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/src/*": ["./src/*"],
      "@repo/shared": ["../../packages/shared/src/index.ts"],
      "@repo/shared/*": ["../../packages/shared/src/*"],
      "@repo/shared/api": ["../../packages/shared/src/api/index.ts"],
      "@repo/shared/types": ["../../packages/shared/src/types/index.ts"],
      "@repo/shared/utils": ["../../packages/shared/src/utils/index.ts"],
      "@repo/shared/constants": ["../../packages/shared/src/constants/index.ts"],
      "@repo/shared/hooks": ["../../packages/shared/src/hooks/index.ts"],
      "@repo/shared/stores": ["../../packages/shared/src/stores/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "../../packages/shared/src/types/global.d.ts"
  ]
}
